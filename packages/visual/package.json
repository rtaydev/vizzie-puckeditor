{
	"name": "@puck-editor/visual",
	"version": "0.1.3",
	"private": false,
	"publishConfig": {
		"access": "public"
	},
	"description": "A modern, customizable visual editor component for Next.js built on top of @measured/puck",
	"keywords": [
		"puck",
		"visual",
		"editor",
		"next.js"
	],
	"main": "./dist/index.js",
	"module": "./dist/index.mjs",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.mjs",
			"require": "./dist/index.js"
		},
		"./styles.css": "./dist/styles.css",
		"./index.css": "./dist/index.css"
	},
	"files": [
		"dist"
	],
	"sideEffects": [
		"**/*.css"
	],
	"scripts": {
		"dev": "tsup --watch",
		"build": "tsup",
		"typecheck": "tsc -p tsconfig.json --noEmit",
		"lint": "eslint ."
	},
	"peerDependencies": {
		"react": ">=18",
		"react-dom": ">=18"
	},
	"devDependencies": {
		"@types/node": "^20",
		"@types/react": "^19",
		"@types/react-dom": "^19",
		"postcss": "^8.5.6",
		"postcss-modules": "^6.0.1",
		"tsup": "^8.0.0",
		"typescript": "^5.0.0"
	},
	"dependencies": {
		"@measured/puck": "^0.20.2",
		"@types/react-color": "^3.0.13",
		"lucide-react": "^0.562.0",
		"react-color": "^2.19.3"
	}
}
